<h2 class="nxs-section nxs-route-type-<%=@route_type %> nxs-route-<%=@route_id.downcase %>">
	<a href="<%="/#{@route_type}/#{@route_id}" %>">
		<span class="nxs-routelabel"><%=@route.route_short_name %></span>
		<% if !@route.is_rail? %>
		 | <%=@route.route_long_name %>
		 <% end %>
	</a>
</h2>
<ul id="directions" class="nxs-items nxs-resize">
	<% @directions.each do |d| %>
	<li class="nxs-section">
		<a href="/<%=@route_type + "/" + @route_id + "/" + d.direction_id.to_s %>" class="nxs-nav-link">
			<%=d.direction_name %>
			<% if(d.direction_long_name != nil) %>
			<span class="nsx-section-sub">To: <%=d.direction_long_name %></span>
			<% end %>
		</a>
	</li>
	<% end %>
</ul>